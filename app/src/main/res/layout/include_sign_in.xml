
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:srcCompat="@mipmap/ic_facebook"
                    android:id="@+id/facebook"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="facebook icon" />

                <ImageButton
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:srcCompat="@mipmap/ic_twitter"
                    android:id="@+id/twitter"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="twitter icon" />

                <ImageButton
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:srcCompat="@mipmap/ic_gmail"
                    android:id="@+id/gmail"
                    android:contentDescription="google plus icon" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_email_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/field_email"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_email_username"
                    android:inputType="textEmailAddress"
                    />

                <EditText
                    android:id="@+id/field_password"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_password"
                    android:inputType="textPassword"
                    />

            </LinearLayout>

                <TextView
                    android:id="@+id/forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:text="Forgot Password?"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    />


        </LinearLayout>
</ScrollView>